@model Domain.Entities.Movie

<div class="col-md-3 col-sm-6 col-xs-offset-3 col-xs-6 MovieBlock">
    <div class="movie">
        <div class="img-block">
            @if (Model.ImageData != null)
            {
                    <img class="movie-title-img" src="@Url.Action("GetImage", "Movie", new { Model.MovieID })" />

            } else {
                    <img class="movie-title-img" src="@String.Format("/Content/Images/Posters/iphone360_{0}.jpg", Model.KPID)" alt="Alternative Text" />
            }
        </div>

        <div class="movie-info">
            <p class="text-style">@Model.Title</p>
        </div>
        <div class="text-center">
            <input id="@Model.MovieID" type="text" class="rating rating-loading pull-right" value="@Model.RatingKP.ToString().Replace(",",".")" data-min="0" data-max="10" data-step="0.1" data-size="xs" data-show-clear="false" data-show-caption="false">       
        </div>

        <div class="rating-block">
            <span>KP: @Model.RatingKP.ToString().Replace(",", ".")</span>
            <span>IMDB: @Model.RatingIMDB.ToString().Replace(",", ".")</span>
        </div>
    </div>   
</div>

