@model IEnumerable<WebUI.Models.MoviePredict>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Your recommendations</h2>

@foreach (var item in Model) {
    <div class="col-md-3 col-sm-6 col-xs-offset-3 col-xs-6 MovieBlock">
        <div class="Movie">
            <div class="imgBlock">
                @if (@item.Movie.ImageData != null)
                {
                    <img class="MovieTitleImg" src="@Url.Action("GetImage", "Movie", new { @item.Movie.MovieID })" />

                }
                else
                {
                    <img class="MovieTitleImg" src="@String.Format("/Content/Images/Posters/iphone360_{0}.jpg", @item.Movie.KPID)" alt="Alternative Text" />
                }
            </div>

            <div class="MovieInfo">
                <p class="textStyle">@item.Movie.Title</p>
            </div>
            <div class="text-center">
                <input id="@item.Movie.MovieID" type="text" class="rating rating-loading pull-right" value="@item.Prediction" data-min="0" data-max="10" data-step="0.1" data-size="xs" readonly="false" data-show-clear="false" data-show-caption="false">
            </div>

            <div class="RatingBlock">
                <span>KP: @item.Movie.RatingKP</span>
                <span>DMB: @item.Movie.RatingIMDB</span>
                <span>IMDB: @item.Movie.RatingIMDB</span>
            </div>
        </div>
    </div>
    @*<p>@item.Movie.MovieID</p>
    <p>@item.Movie.Title</p>
    <p>@item.Prediction</p>*@
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/star-rating")